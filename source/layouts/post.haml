!!!
%html
  = partial("structure/shared-header")
  \
  %body
    .bg-column

    .container
      .site-meta= partial("structure/header")
      .content
        %article.post 
          %time= current_article.date.strftime('%e %B %Y')
          %h1= data.page.title
          = yield
        .navigation
          .prevnav
            - prev_article = current_article.previous_article
            - if prev_article
              Tulisan sebelumnya:
              %strong 
                %a{ :rel => "prev", :href => prev_article.url }= prev_article.title
          .nextnav
            - next_article = current_article.next_article
            - if next_article
              Tulisan selanjutnya:
              %strong 
                %a{ :rel => "next", :href => next_article.url }= next_article.title


    = partial("structure/footer")

